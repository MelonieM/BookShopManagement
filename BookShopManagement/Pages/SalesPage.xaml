<Page x:Class="BookShopManagement.Pages.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Process Sale">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Books List -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📚 Available Books" 
                           FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="SearchBox" Width="250" Height="35" 
                             VerticalContentAlignment="Center" Padding="10"/>
                    <Button Content="Search" Width="80" Height="35" Margin="10,0,0,0"
                            Background="#2196F3" Foreground="White"
                            Click="BtnSearch_Click"/>
                </StackPanel>

                <DataGrid Grid.Row="2" x:Name="BooksGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          MouseDoubleClick="BooksGrid_MouseDoubleClick"
                          BorderBrush="#DDD" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="120"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='${0:F2}'}" Width="70"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding StockQuantity}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Right: Cart -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="🛒 Shopping Cart" 
                           FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- Customer -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Customer (Optional)" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CustomerComboBox" Height="35" 
                              DisplayMemberPath="Name" SelectedValuePath="CustomerID"/>
                </StackPanel>

                <!-- Cart Items -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                              BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel x:Name="CartPanel"/>
                </ScrollViewer>

                <!-- Totals and Actions -->
                <StackPanel Grid.Row="3">
                    <!-- Discount -->
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Discount %:" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBox x:Name="DiscountBox" Width="60" Height="30" Text="0" 
                                     TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Total -->
                    <Border Background="#2196F3" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <TextBlock Text="TOTAL:" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalText" Text="$0.00" 
                                       FontSize="24" FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Clear Cart" Height="45" Margin="0,0,5,0"
                                Background="#F44336" Foreground="White" FontWeight="SemiBold"
                                Click="BtnClear_Click"/>

                        <Button Grid.Column="1" Content="Complete Sale" Height="45" Margin="5,0,0,0"
                                Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                                Click="BtnComplete_Click"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>