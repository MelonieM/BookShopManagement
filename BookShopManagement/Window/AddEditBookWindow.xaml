<Window x:Class="BookShopManagement.Windows.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Book" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            Padding="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="📚 Book Information" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#2196F3"
                           Margin="0,0,0,20"/>

                <!-- ISBN -->
                <TextBlock Text="ISBN *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtISBN" Style="{StaticResource TextBoxStyle}"/>

                <!-- Title -->
                <TextBlock Text="Title *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtTitle" Style="{StaticResource TextBoxStyle}"/>

                <!-- Author -->
                <TextBlock Text="Author *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtAuthor" Style="{StaticResource TextBoxStyle}"/>

                <!-- Price -->
                <TextBlock Text="Price *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtPrice" Style="{StaticResource TextBoxStyle}"/>

                <!-- Stock Quantity -->
                <TextBlock Text="Stock Quantity *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtStock" Style="{StaticResource TextBoxStyle}"/>

                <!-- Category -->
                <TextBlock Text="Category" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtCategory" Style="{StaticResource TextBoxStyle}"/>

                <!-- Publisher -->
                <TextBlock Text="Publisher" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtPublisher" Style="{StaticResource TextBoxStyle}"/>

                <!-- Published Year -->
                <TextBlock Text="Published Year" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtYear" Style="{StaticResource TextBoxStyle}"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,30,0,0">
                    <Button x:Name="BtnSave" 
                            Content="💾 Save" 
                            Width="120" 
                            Height="40"
                            Background="#4CAF50" 
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="SemiBold"
                            Margin="10,0"
                            Click="BtnSave_Click"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnCancel" 
                            Content="❌ Cancel" 
                            Width="120" 
                            Height="40"
                            Background="#F44336" 
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="SemiBold"
                            Margin="10,0"
                            Click="BtnCancel_Click"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <TextBlock Text="* Required fields" 
                           FontSize="11" 
                           Foreground="#999" 
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>