<Window x:Class="BookShopManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Shop - Login" 
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Background="White" CornerRadius="10" Margin="20" Padding="40">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel>
            <!-- Logo/Icon -->
            <TextBlock Text="📚" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Title -->
            <TextBlock Text="Book Shop Management" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Please login to continue" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Foreground="#666"
                       Margin="0,0,0,30"/>

            <!-- Username -->
            <TextBlock Text="Username" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#333"
                       Margin="0,10,0,5"/>
            <TextBox x:Name="TxtUsername" 
                     Height="40"
                     Padding="15,0"
                     FontSize="14"
                     BorderBrush="#DDD"
                     BorderThickness="1"
                     VerticalContentAlignment="Center"/>

            <!-- Password -->
            <TextBlock Text="Password" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#333"
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="TxtPassword" 
                         Height="40"
                         Padding="15,0"
                         FontSize="14"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         KeyDown="TxtPassword_KeyDown"/>

            <!-- Remember Me (Optional) -->
            <CheckBox x:Name="ChkRememberMe" 
                      Content="Remember me" 
                      Margin="0,10,0,0"
                      FontSize="12"
                      Visibility="Visible"/>

            <!-- Error Message -->
            <TextBlock x:Name="TxtError" 
                       Text="" 
                       FontSize="12" 
                       Foreground="Red"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>

            <!-- Login Button -->
            <Button x:Name="BtnLogin" 
                    Content="🔐 LOGIN" 
                    Height="45"
                    Margin="0,20,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="BtnLogin_Click"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Forgot Password Link (Optional) -->
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                <Hyperlink x:Name="LinkForgotPassword" 
                           Click="LinkForgotPassword_Click"
                           TextDecorations="None"
                           Foreground="#2196F3">
                    Forgot Password?
                </Hyperlink>
            </TextBlock>

            <!-- Default Credentials Info -->
            <Border Background="#E3F2FD" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📋 Default Login Credentials:" 
                               FontSize="11" 
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               Margin="0,0,0,8"/>
                    <TextBlock FontSize="11" Foreground="#333" TextWrapping="Wrap">
                        <Run Text="👤 Admin:" FontWeight="Bold"/> 
                        <LineBreak/>
                        <Run Text="   Username: " Foreground="#666"/> 
                        <Run Text="admin" FontWeight="SemiBold" Foreground="#2196F3"/>
                        <LineBreak/>
                        <Run Text="   Password: " Foreground="#666"/> 
                        <Run Text="admin123" FontWeight="SemiBold" Foreground="#2196F3"/>
                        <LineBreak/><LineBreak/>
                        
                        <Run Text="👤 Manager:" FontWeight="Bold"/> 
                        <LineBreak/>
                        <Run Text="   Username: " Foreground="#666"/> 
                        <Run Text="manager" FontWeight="SemiBold" Foreground="#FF9800"/>
                        <LineBreak/>
                        <Run Text="   Password: " Foreground="#666"/> 
                        <Run Text="manager123" FontWeight="SemiBold" Foreground="#FF9800"/>
                        <LineBreak/><LineBreak/>
                        
                        <Run Text="👤 Cashier:" FontWeight="Bold"/> 
                        <LineBreak/>
                        <Run Text="   Username: " Foreground="#666"/> 
                        <Run Text="cashier" FontWeight="SemiBold" Foreground="#4CAF50"/>
                        <LineBreak/>
                        <Run Text="   Password: " Foreground="#666"/> 
                        <Run Text="cashier123" FontWeight="SemiBold" Foreground="#4CAF50"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>