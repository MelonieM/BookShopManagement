<Window x:Class="BookShopManagement.Windows.AddEditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Customer" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            Padding="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="👤 Customer Information" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#4CAF50"
                           Margin="0,0,0,20"/>

                <!-- Name -->
                <TextBlock Text="Name *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtName" Style="{StaticResource TextBoxStyle}"/>

                <!-- Contact -->
                <TextBlock Text="Contact *" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtContact" Style="{StaticResource TextBoxStyle}"/>

                <!-- Email -->
                <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtEmail" Style="{StaticResource TextBoxStyle}"/>

                <!-- Address -->
                <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TxtAddress" 
                         Height="70" 
                         Padding="10,8" 
                         FontSize="13" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,30,0,0">
                    <Button x:Name="BtnSave" 
                            Content="💾 Save" 
                            Width="120" 
                            Height="40"
                            Background="#4CAF50" 
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="SemiBold"
                            Margin="10,0"
                            Click="BtnSave_Click"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnCancel" 
                            Content="❌ Cancel" 
                            Width="120" 
                            Height="40"
                            Background="#F44336" 
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="SemiBold"
                            Margin="10,0"
                            Click="BtnCancel_Click"
                            Cursor="Hand"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <TextBlock Text="* Required fields" 
                           FontSize="11" 
                           Foreground="#999" 
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>