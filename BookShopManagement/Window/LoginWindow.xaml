<Window x:Class="BookShopManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Book Shop Management"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F0F0F0">

	<ScrollViewer VerticalScrollBarVisibility="Auto">

		<Grid Margin="20">

			<Border Background="White"
                    CornerRadius="10"
                    Padding="30"
                    Width="350">
				<Border.Effect>
					<DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
				</Border.Effect>

				<StackPanel>
					<!-- Logo -->
					<TextBlock Text="BOOK SHOP"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#2196F3"
                               Margin="0,0,0,3"/>

					<TextBlock Text="Management System"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Foreground="#666"
                               Margin="0,0,0,15"/>

					<!-- Username -->
					<TextBlock Text="Username"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="0,8,0,4"/>

					<TextBox x:Name="TxtUsername"
                             Height="32"
                             Padding="8,0"
                             FontSize="12"
                             BorderBrush="#CCC"
                             BorderThickness="1"/>

					<!-- Password -->
					<TextBlock Text="Password"
                               FontSize="11"
                               FontWeight="Bold"
                               Margin="0,8,0,4"/>

					<PasswordBox x:Name="TxtPassword"
                                 Height="32"
                                 Padding="8,0"
                                 FontSize="12"
                                 BorderBrush="#CCC"
                                 BorderThickness="1"
                                 KeyDown="TxtPassword_KeyDown"/>

					<!-- Error -->
					<TextBlock x:Name="TxtError"
                               FontSize="10"
                               Foreground="Red"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"
                               MinHeight="15"/>

					<!-- Login -->
					<Button x:Name="BtnLogin"
                            Content="LOGIN"
                            Height="38"
                            Margin="0,12,0,0"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="Bold"
                            Click="BtnLogin_Click"
                            Cursor="Hand"
                            BorderThickness="0"/>

					<!-- Test DB -->
					<Button x:Name="BtnTest"
                            Content="Test Database"
                            Height="32"
                            Margin="0,8,0,0"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="11"
                            Click="BtnTest_Click"
                            Cursor="Hand"
                            BorderThickness="0"/>

					<!-- Credentials box -->
					<Border Background="#E3F2FD"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,12,0,0">
						<StackPanel>
							<TextBlock Text="Default Credentials:"
                                       FontSize="9"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>

							<TextBlock FontSize="9" Margin="0,2">
								<Run Text="admin" FontWeight="Bold"/> / admin123
							</TextBlock>
							<TextBlock FontSize="9" Margin="0,2">
								<Run Text="manager" FontWeight="Bold"/> / manager123
							</TextBlock>
							<TextBlock FontSize="9" Margin="0,2">
								<Run Text="cashier" FontWeight="Bold"/> / cashier123
							</TextBlock>
						</StackPanel>
					</Border>

					<TextBlock Text="Scroll down if you cannot see buttons"
                               FontSize="8"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               FontStyle="Italic"/>
				</StackPanel>

			</Border>

		</Grid>

	</ScrollViewer>

</Window>
