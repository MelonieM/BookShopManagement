<Window x:Class="BookShopManagement.Windows.UpdateStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Stock" 
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            Padding="30">
        <StackPanel>
            <TextBlock Text="📦 Update Stock" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#9C27B0"
                       Margin="0,0,0,20"/>

            <!-- Book Info -->
            <Border Background="#F5F5F5" 
                    Padding="15" 
                    CornerRadius="5"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="TxtBookTitle" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#333"/>
                    <TextBlock x:Name="TxtBookISBN" 
                               FontSize="13" 
                               Foreground="#666"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="TxtCurrentStock" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#2196F3"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Quantity Input -->
            <TextBlock Text="Quantity to Add/Remove" 
                       FontSize="13" 
                       FontWeight="SemiBold" 
                       Foreground="#333"
                       Margin="0,0,0,5"/>
            <TextBlock Text="(Use negative numbers to reduce stock)" 
                       FontSize="11" 
                       Foreground="#999"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="TxtQuantity" 
                     Height="40"
                     FontSize="16"
                     Padding="10,0"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     TextAlignment="Center"
                     TextChanged="TxtQuantity_TextChanged"/>

            <!-- New Stock Preview -->
            <TextBlock x:Name="TxtNewStock" 
                       Text="New Stock: 0" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Foreground="#4CAF50"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,25,0,0">
                <Button x:Name="BtnUpdate" 
                        Content="✓ Update" 
                        Width="120" 
                        Height="40"
                        Background="#9C27B0" 
                        Foreground="White"
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Margin="10,0"
                        Click="BtnUpdate_Click"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnCancel" 
                        Content="✗ Cancel" 
                        Width="120" 
                        Height="40"
                        Background="#757575" 
                        Foreground="White"
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Margin="10,0"
                        Click="BtnCancel_Click"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>