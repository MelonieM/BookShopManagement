<Window x:Class="BookShopManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Shop Management System" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="📚 Book Shop Management System" 
                     FontSize="26" 
                     FontWeight="Bold" 
                     Foreground="White"/>
                    <TextBlock x:Name="SubtitleText" 
                     Text="Welcome! Select a module to get started" 
                     FontSize="12" 
                     Foreground="#E3F2FD"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                  Orientation="Horizontal" 
                  VerticalAlignment="Center">
                    <!-- User Info -->
                    <Border Background="#1976D2" 
                    CornerRadius="5" 
                    Padding="15,8"
                    Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" 
                             FontSize="16" 
                             VerticalAlignment="Center"
                             Margin="0,0,5,0"/>
                            <StackPanel>
                                <TextBlock x:Name="TxtLoggedInUser" 
                                 Text="User Name" 
                                 FontSize="13" 
                                 FontWeight="SemiBold"
                                 Foreground="White"/>
                                <TextBlock x:Name="TxtUserRole" 
                                 Text="Role" 
                                 FontSize="10" 
                                 Foreground="#B3E5FC"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Logout Button -->
                    <Button x:Name="BtnLogout"
                    Content="🚪 Logout"
                    Background="#F44336"
                    Foreground="White"
                    Padding="12,8"
                    FontSize="12"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnLogout_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Date/Time -->
                    <TextBlock x:Name="DateTimeText" 
                     FontSize="12" 
                     Foreground="White" 
                     VerticalAlignment="Center"
                     Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="MODULES" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="#666" 
                             Margin="0,0,0,15"/>

                    <Button x:Name="BtnDashboard" 
                          Content="📊 Dashboard" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnDashboard_Click"
                          HorizontalContentAlignment="Left"
                          Background="#4CAF50"/>

                    <Button x:Name="BtnBooks" 
                          Content="📚 Book Management" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnBooks_Click"
                          HorizontalContentAlignment="Left"/>

                    <Button x:Name="BtnCustomers" 
                          Content="👥 Customer Management" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnCustomers_Click"
                          HorizontalContentAlignment="Left"/>

                    <Button x:Name="BtnSales" 
                          Content="🛒 Process Sale" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnSales_Click"
                          HorizontalContentAlignment="Left"
                          Background="#FF9800"/>

                    <Button x:Name="BtnReports" 
                          Content="📈 Reports" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnReports_Click"
                          HorizontalContentAlignment="Left"/>

                    <Separator Margin="0,20"/>

                    <Button x:Name="BtnExit" 
                          Content="🚪 Exit" 
                          Style="{StaticResource ModernButton}"
                          Click="BtnExit_Click"
                          HorizontalContentAlignment="Left"
                          Background="#F44336"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
				<Frame x:Name="MainFrame"
       NavigationUIVisibility="Hidden"
       Background="Transparent"/>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#37474F">
            <Grid Margin="20,0">
                <TextBlock x:Name="StatusText" 
                         Text="Ready" 
                         Foreground="White" 
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>